<div class="category_preview">
<table>
 <tr>
        <% category.puzzles.rnd3.limit3.each do |puzzle| %>
            <td class="category_puzzle">
               <div class="block">
               <%if puzzle.image.exists?%>
                  <%= link_to(image_tag(puzzle.image.url(:thumb)) , category_path(category), :class => 'category_image_preview') %>
               <%end%>   
             </div>
            </td>
        <%end%>
 </tr>
  
</table>
</div>

